  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('reservationForm');
      const confirmation = document.getElementById('confirmation');

      form.addEventListener('submit', function(e) {
        e.preventDefault();
        const pickupTime = form.querySelector('#pickup_time').value;
        const pickupAddress = form.querySelector('#pickup_address').value;
        const dropoffAddress = form.querySelector('#dropoff_address').value;
        
        if (pickupTime && pickupAddress && dropoffAddress) {
          // Simuler l'envoi d'un e-mail (dans un environnement réel, cela serait géré côté serveur)
          const emailData = {
            to: 'emsdriver@gmail.com',
            subject: 'Nouvelle réservation VTC',
            body: `
              Nouvelle réservation :
              Date et heure : ${pickupTime}
              Adresse de départ : ${pickupAddress}
              Adresse d'arrivée : ${dropoffAddress}
            `
          };

          // Simuler une requête API pour envoyer l'e-mail
          axios.post('https://api.example.com/send-email', emailData)
            .then(response => {
              console.log('Email envoyé avec succès');
              form.reset();
              confirmation.style.display = 'block';
              setTimeout(() => {
                confirmation.style.display = 'none';
              }, 5000);
            })
            .catch(error => {
              console.error('Erreur lors de l\'envoi de l\'email', error);
              alert('Une erreur est survenue lors de la réservation. Veuillez réessayer.');
            });
        } else {
          alert('Veuillez remplir tous les champs pour effectuer une réservation.');
        }
      });
    });
  </script>
